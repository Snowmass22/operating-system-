 #include <iostream>
 using namespace std;
 int main(){
     int n=5;
     int r=3;
     int allocation[n][r]={{0,1,0},{2,0,0},{3,0,2},{2,1,1},{0,0,2}};
     int max[n][r]={{7,5,3},{3,2,2},{9,0,2},{2,2,2},{4,3,3}};
     int available[3]={3,3,2};
     int need[n][r];
     for(int i=0;i<n;i++){
         for(int j=0;j<r;j++){
            need[i][j]=max[i][j]-allocation[i][j];
         }
     }
     int finish[5],ind=0, ans[5];
     for(int i=0;i<5;i++){
         finish[i]=0;
     }
     //bankers logic
     for(int k=0;k<5;k++){
         for(int i=0;i<n;i++){
             if(finish[i]==0){
                 int flag=0;
                 for(int j=0;j<r;j++){
                     if(need[i][j]>available[j]){
                         flag=1;
                        break;
                     }
                     
                 }
                 if(flag==0){
                     ans[ind++]=i;
                     for(int y=0;y<r;y++){
                         available[y]=available[y]+allocation[i][y];
                         finish[i]=1;
                     }
                 }
                 
             }
         }
     }
   bool safe = true;
    for(int i = 0; i < n; i++) {
        if(finish[i] == 0) {
            safe = false;
            cout << "The system is not safe!";
            break;
        }
    }

    if(safe) {
        cout << "Following is the SAFE Sequence:" << endl;
        for (int i = 0; i < n - 1; i++)
            cout << " P" << ans[i] << " ->";
        cout << " P" << ans[n - 1] << endl;
    }
     return 0;
 }
